<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="facultyAvailabilityScheduler.Views.SelectionPage"
             Title="SelectionPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="StudentLoginButton"
            Text="Student"
            Clicked="OnStudentLoginClicked"
            Margin="20" />

        <Button
            x:Name="FacultyLoginButton"
            Text="Faculty"
            Clicked="OnFacultyLoginClicked"
            Margin="20" />
    </VerticalStackLayout>
</ContentPage>
